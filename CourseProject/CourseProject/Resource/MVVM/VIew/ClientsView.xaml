<Window x:Class="TermPaper.MVVM.View.ClientsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TermPaper.MVVM.View"
        xmlns:viewmodel="clr-namespace:TermPaper.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="ClientsView" Height="500" Width="800">
 
    <Grid>
        <Grid.RowDefinitions>


            <RowDefinition Height="*" />
            <RowDefinition Height="0,5*"/>
        </Grid.RowDefinitions>



        <Border Grid.Row="0" Background="#094d74">
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="ButtonDelete" HorizontalAlignment="Left" Height="50" Margin="10,10,10,10" VerticalAlignment="Center" Width="140" />
            <Button Content="ButtonEdit" HorizontalAlignment="Left" Height="50" Margin="10,10,10,10" VerticalAlignment="Center" Width="140"/>
            <Button Content="Buttonadd" HorizontalAlignment="Left" Height="50" Margin="10,10,10,10" VerticalAlignment="Center" Width="140" />
        </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#759cd8">
            
        </Border>


    </Grid>
</Window>
